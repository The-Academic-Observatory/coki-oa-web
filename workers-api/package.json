    "@types/flexsearch": "0.7.2",
    "@types/jest": "^27.4.1",
    "@types/lodash.get": "^4.4.7",
    "@types/lodash.set": "^4.3.7",
    "@types/node": "^17.0.23",
    "@types/tmp": "^0.2.3",
    "decompress": "^4.2.1",
    "deepcopy": "^2.1.0",
    "esbuild": "^0.14.23",
    "jest": "^29.5.0",
    "jest-environment-miniflare": "^2.14.0",
